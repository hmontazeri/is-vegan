{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./src"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
